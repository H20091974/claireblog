<!DOCTYPE html>
	#parse("module/base.vm")
	
	<link rel="stylesheet" href="article/css/style.css">
	
	<body class="single">
		
	<div class="fh5co-loader"></div>
	
	<div id="page">
		<div id="fh5co-aside" style="background-image: url(${article.headFig})" data-stellar-background-ratio="0.5">
			<div class="overlay"></div>
			<nav role="navigation">
				<ul>
					<li><a href="index.html"><i class="icon-home"></i></a></li>
				</ul>
			</nav>
			<div class="page-title">
				<img src="${userprofile}" alt="Free HTML5 by FreeHTMl5.co">
				<span>${article.postDate}</span>
				<h2>${article.title}</h2>
			</div>
		</div>
		<div id="fh5co-main-content">
			<div class="fh5co-post"> 
				<div class="fh5co-entry padding">
					<div>
						${article.content}
					</div>
				</div>
				
				

			</div>
		</div>
	</div>

	<div class="fh5co-navigation">
		<div class="fh5co-cover prev fh5co-cover-sm" style="background-image: url(${previous.headFig})">
			<div class="overlay"></div>

			<a class="copy" href="/article?id=${previous.id}">
				<div class="display-t">
					<div class="display-tc">
						<div>
							<span>Previous Post</span>
							<h2>${previous.title}</h2>
						</div>
					</div>
				</div>
			</a>

		</div>
		<div class="fh5co-cover next fh5co-cover-sm" style="background-image: url(${next.headFig})">
			<div class="overlay"></div>
			<a class="copy" href="/article?id=${next.id}">
				<div class="display-t">
					<div class="display-tc">
						<div>
							<span>Next Post</span>
							<h2>${next.title}</h2>
						</div>
					</div>
				</div>
			</a>

		</div>
	</div>

	</body>
