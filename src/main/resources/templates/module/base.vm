		<script type="text/javascript">
		 function redirect(path){
			 window.location.replace(path);
		 }
		 
		 function login_validate () {
		        var form = new FormData(document.getElementById("loginform"));
		       
		        $.ajax({
		            url:"/login",
		            type:"post",
		            data:form,
		            processData:false,
		            contentType:false,
		            async:true,
		            success:function(data){
						if(data == "success"){
                            redirect("/")
						}else{
							alert(data);
						}
		            }
		        });
		    }
		 
		 function register_validate () {
		        var form = new FormData(document.getElementById("regform"));
		        var password = form.getElementById("password");
		        var password_confirmation = form.getElementById("password_confirmation");
		        if(password != password_confirmation)	alert("re-enter");
		        else{
			        $.ajax({
			            url:"/register",
			            type:"post",
			            data:form,
			            processData:false,
			            contentType:false,
			            async:false,
			            success:function(data){
			                alert(data);
			                redirect('/')
			            },
			            error:function(e){
			                alert(e);
			            }
			        });
		        }
		    }
