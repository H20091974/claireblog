<!DOCTYPE html>

#parse("/module/base.vm")
<link href="/user/css/demo.css" rel="stylesheet" />
<link rel="stylesheet" href="/user/css/main-default.css" />
<link href="/user/css/gsdk-bootstrap-wizard.css" rel="stylesheet" />
<link href="/user/css/demo.css" rel="stylesheet" />

<div class="container b-header__box b-relative">
    <div class="b-header-r b-right b-header-r--icon"></div>
</div>

<div id="wrapper">
<!-- Main -->
<div id="main">
    <div class="l-inner-page-container">
        <div class="container " >
            <div class="row ">
                <div class="col-md-9 col-md-push-3">
                    <div class="container" style="width:970px">
        				<div class="row" >
        				<div class="col-sm-11" >

            <!--      Wizard container        -->
            <div class="wizard-container">

                <div class="card wizard-card" data-color="orange" id="wizardProfile">
                    <form action="" method="">
                <!--        You can switch ' data-color="orange" '  with one of the next bright colors: "blue", "green", "orange", "red"          -->

                    	<div class="wizard-header">
                        	<h3>
                        	   <b>谁是今天的幸运宝宝<br>
                        	   <small>快来选出来吧</small>
                        	</h3>
                    	</div>

						<div class="wizard-navigation">
							<ul>
	                            
	                            <li><a href="#account" data-toggle="tab">今日幸运宝宝</a></li>
	                            
	                        </ul>

						</div>

                        <div class="tab-content">
                            <div class="tab-pane" id="account">
                               
                                <div class="row">
									
										
									
                                    <div class="col-sm-10 col-sm-offset-1">
                                        <div class="col-sm-4">
                                        
                                            <div class="choice" data-toggle="wizard-checkbox">
                                                <input type="checkbox" name="jobb" value="Design">
                                                <div class="icon">
                                                    <i class="fa fa-pencil"></i>
                                                </div>
                                                <h6>${first}</h6>
                                            </div>
                                        </div>
                                        <div class="col-sm-4">
                                            <div class="choice" data-toggle="wizard-checkbox">
                                                <input type="checkbox" name="jobb" value="Code">
                                                <div class="icon">
                                                    <i class="fa fa-terminal"></i>
                                                </div>
                                                <h6>${second}</h6>
                                            </div>

                                        </div>
                                        <div class="col-sm-4">
                                            <div class="choice" data-toggle="wizard-checkbox">
                                                <input type="checkbox" name="jobb" value="Develop">
                                                <div class="icon">
                                                    <i class="fa fa-laptop"></i>
                                                </div>
                                                <h6>${third}</h6>
                                            </div>

                                        </div>
                                    </div>

                                </div>
                            </div>
                            
                            
                        </div>
                        <div class="wizard-footer height-wizard">
                            <div class="pull-right">
                                
                                <input type='submit' class='btn btn-finish btn-fill btn-warning btn-wd btn-sm' name='finish' value='抽奖' onclick="redirect('/lottery')"/>

                            </div>

                            <div class="pull-left">
                                <input type='button' class='btn btn-previous btn-fill btn-default btn-wd btn-sm' name='previous' value='上一页' />
                            </div>
                            <div class="clearfix"></div>
                        </div>

                    </form>
                </div>
            </div> <!-- wizard container -->
        </div>
        </div><!-- end row -->
    </div> <!--  big container -->
                    
                </div>
                <div class="visible-xs-block visible-sm-block b-hr"></div>
                #include("/module/userbase.vm")
            </div>
        </div>
    </div>
</div>
<!--   Core JS Files   -->
	
	
	<script src="/user/js/jquery.bootstrap.wizard.js" type="text/javascript"></script>
	<!--  Plugin for the Wizard -->
	<script src="/user/js/gsdk-bootstrap-wizard.js"></script>
	<!--  More information about jquery.validate here: http://jqueryvalidation.org/	 -->
	<script src="/user/js/jquery.validate.min.js"></script>
</html>
